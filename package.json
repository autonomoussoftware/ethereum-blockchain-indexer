  "license": "MIT",
  "author": "Gabriel Montes <gabriel@bloq.com>",
  "main": "server.js",
  "repository": "autonomoussoftware/ethereum-blockchain-indexer",
  "scripts": {
    "api": "forever ./src/api/index.js",
    "docker:build": "docker build -t ethereum-transaction-indexer .",
    "check": "dependency-check . && dependency-check . --unused --no-dev --ignore-module forever --ignore-module winston --ignore-module winston-papertrail --ignore-module winston-sentry-transport",
    "check:outdated": "npm-check -p -i husky -i eslint-config-plugin:*",
    "coverage": "nyc --lines 95 --functions 95 --branches 95 --reporter=lcov --reporter=text npm test",
    "dev": "nodemon -w .",
    "indexer": "forever ./src/indexer/index.js",
    "lint": "eslint --cache .",
    "precommit": "npm run lint",
    "prepush": "npm run check && npm run test",
    "start": "PUBSUB='in-process' forever server.js",
    "test": "NODE_ENV=test mocha"
  },
  "dependencies": {
    "@bloq/service-logger": "git://github.com/bloq/service-logger.git",
    "before-exit": "1.0.0",
    "bn.js": "4.11.8",
    "config": "1.30.0",
    "forever": "0.15.3",
    "lodash": "4.17.11",
    "mongodb": "3.1.8",
    "newrelic": "4.9.0",
    "p-memoize": "1.0.0",
    "promise-all-props": "1.0.1",
    "promise-prototype-finally": "1.0.0",
    "redis": "2.8.0",
    "restify": "7.2.1",
    "restify-errors": "6.1.1",
    "restify-router": "0.5.1",
    "socket.io": "2.1.1",
    "web3": "1.0.0-beta.36",
    "web3-utils": "1.0.0-beta.34",
    "winston": "2.4.4",
    "winston-papertrail": "1.0.5",
    "winston-sentry-transport": "1.0.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "dependency-check": "3.2.1",
    "eslint": "5.7.0",
    "eslint-config-bloq": "1.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsdoc": "3.9.1",
    "eslint-plugin-mocha": "5.2.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-prefer-arrow": "1.1.3",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.1.2",
    "mocha": "5.2.0",
    "nodemon": "1.18.4",
    "npm-check": "5.9.0",
    "nyc": "13.1.0",
    "proxyquire": "2.1.0"
  },
  "engines": {
    "node": "8",
    "npm": "5"
  }
